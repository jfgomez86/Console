# Extended Commands Aliases
#################################
alias v="vim --remote"
alias grep='grep --color=auto'
alias tree='tree -L 2'
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

[[ -x /Applications/MacVim.app/Contents/MacOS/Vim ]] && alias vim="/Applications/MacVim.app/Contents/MacOS/Vim"

# vim: set ft:sh:
